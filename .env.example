# Observability in a Box - Environment Variables
# Copy this file to .env and customize as needed

# ==================== Grafana ====================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ==================== Logging Stack Ports ====================
LOKI_PORT=3100
GRAFANA_LOGGING_PORT=3000

# ==================== Metrics Stack Ports ====================
PROMETHEUS_PORT=9090
PUSHGATEWAY_PORT=9091
NODE_EXPORTER_PORT=9100
CADVISOR_PORT=8080
GRAFANA_METRICS_PORT=3001

# ==================== Telemetry Stack Ports ====================
TEMPO_HTTP_PORT=3200
TEMPO_GRPC_PORT=9095
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318
GRAFANA_TELEMETRY_PORT=3002

# ==================== Data Retention ====================
# Loki retention (default: disabled, keeps all data)
# LOKI_RETENTION_PERIOD=168h

# Prometheus retention (default: 15d)
# PROMETHEUS_RETENTION=15d

# Tempo retention (default: 1h for demo, increase for production)
# TEMPO_RETENTION=72h
