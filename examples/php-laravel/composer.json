{
    "name": "example/php-app",
    "type": "project",
    "description": "OIB Example: PHP with full observability",
    "require": {
        "php": "^8.2",
        "open-telemetry/sdk": "^1.0",
        "open-telemetry/exporter-otlp": "^1.0",
        "guzzlehttp/guzzle": "^7.0",
        "nyholm/psr7": "^1.8",
        "promphp/prometheus_client_php": "^2.6",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {},
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "bootstrap/tracing.php",
            "bootstrap/metrics.php"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
